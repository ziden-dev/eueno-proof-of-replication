{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020"],
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "outDir": "dist",
        "typeRoots": ["node_modules/@types"],
        "allowJs": true,
        "esModuleInterop": true
    },
    "ts-node": {
        "esm": true
    },
    "files": ["src/cosm-lib.ts", "src/chain.ts"],
    "include": ["src/*.ts"],
    "exclude": ["node_modules"]
}
